<div class="container">
  <h1 class="my-4 text-left">All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-6 mb-4">
        <div class="card bg-light shadow-sm">
          <div class="card-body">
            <h4 class="card-title font-weight-bold"><%= flat.name %></h4>
            <p class="card-text text-muted"><%= flat.address %></p>
            <div class="d-flex gap-4">
              <p><i class="fas fa-users"></i> <%= flat.number_of_guests %> Guests</p>
              <p><i class="fas fa-pound-sign"></i> <%= flat.price_per_night %> per night</p>
            </div>
          </div>
          <div class="card-footer bg-white d-flex gap-4">
            <%= link_to "More info", flat_path(flat), class: "text-primary text-decoration-none" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "text-warning text-decoration-none" %>
            <%= link_to "Delete", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-danger text-decoration-none" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
