<div class="header-image" style="background-image: url('<%= asset_path('completed-google-places-label.png') %>'); height: 33vh; background-size: cover; background-position: center;"></div>

<div class="container">
  <div class="bg-light p-4 mt-4 shadow-sm rounded" style="background-color: #f8f9fa;">
    <h2><%= @flat.name %></h2>
    <p><%= @flat.address %></p>
  </div>

  <div class="bg-light p-4 mt-4 shadow-sm rounded" style="background-color: #f8f9fa;">
    <h3>A bit more about this flat...</h3>
    <p><%= @flat.description %></p>
  </div>

  <div class="bg-light p-4 mt-4 shadow-sm rounded" style="background-color: #f8f9fa;">
    <h3>Details</h3>
    <div class="d-flex justify-content-start gap-4">
      <p><i class="fas fa-users"></i> <%= @flat.number_of_guests %> Guests</p>
      <p><i class="fas fa-pound-sign"></i> <%= @flat.price_per_night %> Per night</p>
    </div>
  </div>

  <div class="d-flex justify-content-start mt-4 gap-4">
    <%= link_to "Return to all Flats", flats_path, class: "btn btn-sm btn-primary" %>
    <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-sm btn-warning me-2" %>
  </div>
</div>
